<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JossueAyala22.MainPage">

    <ContentPage.Content>
        <VerticalStackLayout Padding="20" VerticalOptions="CenterAndExpand">
            <Label Text="Recarga telefónica" FontSize="Large" HorizontalOptions="Center" TextColor="White" BackgroundColor="#6200EE" Padding="10"/>
            <Label Text="Ingrese el número de teléfono:" FontSize="Medium" HorizontalOptions="Center" />
            <Entry x:Name="JAyala_phoneNumberEntry" Placeholder="0856432100" Keyboard="Telephone" HorizontalOptions="Center" WidthRequest="200"/>
            <Button Text="Siguiente" Clicked="OnNextButtonClicked" BackgroundColor="#6200EE" TextColor="White" WidthRequest="200" HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
